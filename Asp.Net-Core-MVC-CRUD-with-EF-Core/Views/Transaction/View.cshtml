@model WebApplication1.Models.TransactionModel

@{
    ViewData["Title"] = "Add/Edit";
    Layout = null;
}

<h1>View</h1>

<h4>Transaction Details</h4>
<hr />
<div class="container">
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-route-id="@Model.TransactionId" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionId" />
            <input type="hidden" asp-for="Date" />
            <div class="row">
                <div class="col-md-6">

                    <div class="form-group">
                        <label asp-for="AccountNumber" class="control-label"></label>
                        <div class="input-group-prepend">
                            <span class="input-group-text">#</span>
                            <input asp-for="AccountNumber" class="form-control" readonly="readonly" />

                        </div>

                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label asp-for="BeneficiaryName" class="control-label"></label>
                        <div class="input-group-prepend">
                            <span class="input-group-text">#</span>
                            <input asp-for="BeneficiaryName" class="form-control" readonly="readonly" />

                        </div>
                        <span asp-validation-for="BeneficiaryName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BankName" class="control-label"></label>
                        <div class="input-group-prepend">
                            <span class="input-group-text">#</span>
                            <input asp-for="BankName" class="form-control" readonly="readonly" />

                        </div>
                        <span asp-validation-for="BankName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label asp-for="SwiftCode" class="control-label"></label>
                        <div class="input-group-prepend">
                            <span class="input-group-text">#</span>
                            <input asp-for="SwiftCode" class="form-control" readonly="readonly" />

                        </div>
                        <span asp-validation-for="SwiftCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <div class="input-group-prepend">
                            <span class="input-group-text">#</span>
                            <input asp-for="Amount" class="form-control" readonly="readonly" />

                        </div>
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>

            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" disabled="disabled"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
